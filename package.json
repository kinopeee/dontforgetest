{
  "name": "chottotest",
  "publisher": "local",
  "displayName": "Chottotest",
  "description": "Cursor CLIを活用してテストコードを自動生成するVS Code拡張機能",
  "version": "0.0.30",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:testgen-agent.controlPanel",
    "onCommand:testgen-agent.openPanel",
    "onCommand:testgen-agent.generateTest",
    "onCommand:testgen-agent.generateTestFromFile",
    "onCommand:testgen-agent.generateTestFromCommit",
    "onCommand:testgen-agent.generateTestFromCommitRange",
    "onCommand:testgen-agent.generateTestFromWorkingTree",
    "onCommand:testgen-agent.previewLastRun",
    "onCommand:testgen-agent.rollbackLastRun",
    "onCommand:testgen-agent.showTestGeneratorOutput",
    "onCommand:testgen-agent.selectDefaultModel"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "testgen-agent",
          "title": "Chottotest",
          "icon": "media/testgen-view.svg"
        }
      ]
    },
    "views": {
      "testgen-agent": [
        {
          "id": "testgen-agent.controlPanel",
          "name": "Chottotest",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "testgen-agent.generateTest",
        "title": "Chottotest: テスト生成（QuickPick）"
      },
      {
        "command": "testgen-agent.openPanel",
        "title": "Chottotest: パネルを開く"
      },
      {
        "command": "testgen-agent.generateTestFromFile",
        "title": "Chottotest: 現在のファイルからテスト生成"
      },
      {
        "command": "testgen-agent.generateTestFromCommit",
        "title": "Chottotest: 最新コミット差分からテスト生成"
      },
      {
        "command": "testgen-agent.generateTestFromCommitRange",
        "title": "Chottotest: コミット範囲差分からテスト生成"
      },
      {
        "command": "testgen-agent.generateTestFromWorkingTree",
        "title": "Chottotest: 未コミット差分からテスト生成"
      },
      {
        "command": "testgen-agent.previewLastRun",
        "title": "Chottotest: 直近実行の差分を表示"
      },
      {
        "command": "testgen-agent.rollbackLastRun",
        "title": "Chottotest: 直近実行を元に戻す(Undo)"
      },
      {
        "command": "testgen-agent.showTestGeneratorOutput",
        "title": "Chottotest: 出力ログを表示"
      },
      {
        "command": "testgen-agent.selectDefaultModel",
        "title": "Chottotest: デフォルトモデルを選択"
      },
      {
        "command": "testgen-agent.openSettings",
        "title": "Chottotest: 設定を開く",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "testgen-agent.openSettings",
          "when": "view == testgen-agent.controlPanel",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Chottotest",
      "properties": {
        "testgen-agent.cursorAgentPath": {
          "type": "string",
          "default": "",
          "description": "cursor-agent コマンドのパス（未指定の場合は PATH から解決）"
        },
        "testgen-agent.maxParallelTasks": {
          "type": "number",
          "default": 4,
          "description": "複数ファイル処理の同時実行数上限（スナップショット取得/復元など）"
        },
        "testgen-agent.defaultModel": {
          "type": "string",
          "default": "",
          "description": "cursor-agent に渡すデフォルトモデル（空の場合は自動）"
        },
        "testgen-agent.customModels": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "モデル候補のフォールバックリスト（QuickPick等で使用）"
        },
        "testgen-agent.testStrategyPath": {
          "type": "string",
          "default": "docs/test-strategy.md",
          "description": "テスト戦略ルールファイルのパス（ワークスペース相対または絶対）"
        },
        "testgen-agent.includeTestPerspectiveTable": {
          "type": "boolean",
          "default": true,
          "description": "テスト生成前にテスト観点表（Markdown）を生成してファイル保存する"
        },
        "testgen-agent.perspectiveReportDir": {
          "type": "string",
          "default": "docs/test-perspectives",
          "description": "テスト観点表（自動生成）の保存先ディレクトリ（ワークスペース相対または絶対）"
        },
        "testgen-agent.testExecutionReportDir": {
          "type": "string",
          "default": "docs/test-execution-reports",
          "description": "テスト実行レポート（自動生成）の保存先ディレクトリ（ワークスペース相対または絶対）"
        },
        "testgen-agent.testCommand": {
          "type": "string",
          "default": "npm test",
          "description": "テスト実行コマンド（空の場合は実行しない。例: npm test, pnpm test, pytest）"
        },
        "testgen-agent.testExecutionRunner": {
          "type": "string",
          "enum": [
            "cursorAgent",
            "extension"
          ],
          "default": "cursorAgent",
          "description": "テスト実行の担当者（cursorAgent=cursor-agentに実行させて結果を抽出、extension=拡張機能が直接実行）"
        },
        "testgen-agent.allowUnsafeTestCommand": {
          "type": "boolean",
          "default": false,
          "description": "testExecutionRunner=extension の場合に、VS Code を別プロセスで起動しそうなテストコマンドでも実行する（重複起動で不安定になる可能性があります）"
        },
        "testgen-agent.cursorAgentForceForTestExecution": {
          "type": "boolean",
          "default": false,
          "description": "testExecutionRunner=cursorAgent のテスト実行で cursor-agent に --force を付与する（コマンド実行の拒否回避を試す。ファイル編集も可能になるため注意）"
        },
        "testgen-agent.enablePreTestCheck": {
          "type": "boolean",
          "default": true,
          "description": "テストコード生成後に型チェック/Lintを実行し、エラーがあれば自動修正を試みる"
        },
        "testgen-agent.preTestCheckCommand": {
          "type": "string",
          "default": "npm run compile",
          "description": "生成後に実行する型チェック/Lintコマンド（例: npm run compile, npm run lint, tsc --noEmit）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src/",
    "test": "node ./out/test/runTest.js",
    "package:vsix": "npm run compile && VERSION=$(node -p \"require('./package.json').version\") && npx --yes @vscode/vsce package --out \"chottotest-$VERSION.vsix\" --allow-missing-repository --no-rewrite-relative-links"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "keywords": [
    "test",
    "testing",
    "test-generation",
    "cursor",
    "ai"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": ""
  }
}
