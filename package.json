{
  "name": "testgen-agent",
  "publisher": "local",
  "displayName": "TestGenie",
  "description": "Cursor CLIを活用してテストコードを自動生成するVS Code拡張機能",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "testgen-agent.generateTest",
        "title": "TestGenie: テスト生成（QuickPick）"
      },
      {
        "command": "testgen-agent.generateTestFromFile",
        "title": "TestGenie: 現在のファイルからテスト生成"
      },
      {
        "command": "testgen-agent.generateTestFromCommit",
        "title": "TestGenie: 最新コミット差分からテスト生成"
      },
      {
        "command": "testgen-agent.generateTestFromCommitRange",
        "title": "TestGenie: コミット範囲差分からテスト生成"
      },
      {
        "command": "testgen-agent.generateTestFromWorkingTree",
        "title": "TestGenie: 未コミット差分からテスト生成"
      },
      {
        "command": "testgen-agent.previewLastRun",
        "title": "TestGenie: 直近実行の差分を表示"
      },
      {
        "command": "testgen-agent.rollbackLastRun",
        "title": "TestGenie: 直近実行をロールバック"
      },
      {
        "command": "testgen-agent.showTestGeneratorOutput",
        "title": "TestGenie: 出力ログを表示"
      },
      {
        "command": "testgen-agent.selectDefaultModel",
        "title": "TestGenie: デフォルトモデルを選択"
      }
    ],
    "configuration": {
      "title": "TestGenie",
      "properties": {
        "testgen-agent.cursorAgentPath": {
          "type": "string",
          "default": "",
          "description": "cursor-agent コマンドのパス（未指定の場合は PATH から解決）"
        },
        "testgen-agent.maxParallelTasks": {
          "type": "number",
          "default": 4,
          "description": "複数ファイル処理の同時実行数上限（スナップショット取得/復元など）"
        },
        "testgen-agent.defaultModel": {
          "type": "string",
          "default": "",
          "description": "cursor-agent に渡すデフォルトモデル（空の場合は自動）"
        },
        "testgen-agent.customModels": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "モデル候補のフォールバックリスト（QuickPick等で使用）"
        },
        "testgen-agent.testStrategyPath": {
          "type": "string",
          "default": "docs/test-strategy.md",
          "description": "テスト戦略ルールファイルのパス（ワークスペース相対または絶対）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.7.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
